{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "preset": "ts-jest",
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "^src$": "<rootDir>/src",
    "^src/(.+)$": "<rootDir>/src/$1"
  },
  "modulePathIgnorePatterns": ["src/typings"],
  "testPathIgnorePatterns": [
    "/node_modules./",
    "<rootDir>/(coverage|lib|tmp)./"
  ]
}
